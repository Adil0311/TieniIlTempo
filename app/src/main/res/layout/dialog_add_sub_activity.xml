<!-- dialog_add_sub_activity.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSubActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titolo" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSubActivityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrizione"
            android:minLines="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMaxTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tempo massimo (secondi)"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/cbRequireLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Richiedi geolocalizzazione"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/cbIsParallel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AttivitÃ  parallela" />

</LinearLayout>